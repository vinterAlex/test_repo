name: Drop BigQuery Dataset

on:
  pull_request:
    types:
      - closed

jobs:
  drop_dataset:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Extract Pull Request Number
        id: extract_pr_number
        run: echo "::set-output name=pr_number::${{ github.event.pull_request.number }}"  


      - id: 'auth'
        uses: 'google-github-actions/auth@v1'
        with:
            credentials_json: '${{ secrets.BQ_DROP_SCHEMA_ON_MERGE }}'

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'
      - uses: google-github-actions/setup-gcloud@v0
        with:
          version: '390.0.0'
          project_id:	alexvspreadsheets


      - name: Delete BigQuery Dataset
        run: |
          gcloud config set project alexvspreadsheets
          bq rm -r -f alexvspreadsheets:dbt_cloud_pr_8545_${{ steps.extract_pr_number.outputs.pr_number }}
